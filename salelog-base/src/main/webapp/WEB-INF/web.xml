<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <context-param>
        <param-name>configuration</param-name>
        <param-value>development</param-value>
<!--        <param-value>deployment</param-value>  -->
    </context-param>
    
    <filter>
        <filter-name>wicket</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>ru.complitex.salelog.web.SalelogWebApplication</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>wicket</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <security-role>
        <role-name>AUTHORIZED</role-name>
    </security-role>
    <security-role>
        <role-name>INFO_PANEL_ALLOWED</role-name>
    </security-role>
    <security-role>
        <role-name>ADMIN_MODULE_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>ADDRESS_MODULE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>ADDRESS_MODULE_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>APARTMENT_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>ROOM_EDIT</role-name>
    </security-role>
    
    <security-role>
        <role-name>ORGANIZATION_MODULE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>ORGANIZATION_MODULE_EDIT</role-name>
    </security-role>

    <security-role>
        <role-name>PERSON_MODULE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>PERSON_MODULE_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>PERSON_MODULE_DESCRIPTION_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>CHILD_ORGANIZATION_VIEW</role-name>
    </security-role>
    
    <security-role>
        <role-name>REFERENCE_DATA_MODULE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>REFERENCE_DATA_MODULE_EDIT</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>salelogRealm</realm-name>
        <form-login-config>
            <form-login-page>/fake_login_resource.html</form-login-page>
            <form-error-page>/fake_login_resource.html</form-error-page>
        </form-login-config>
    </login-config>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
